<figure>
    <%= link_to (image_tag book.book_img.url(:book_index), class: "book_index",style:"height: 242px; width: 480px"),book,method: :get%>
    <figcaption class="bg-orange">
        <div class="info-block">
            <h4><%= book.name %></h4>
            <span class="author"><strong>Author:</strong> <%=book.author.name%></span>
            <span class="author"><strong>ISBN:</strong> 9781581573268</span>
            <div class="rating">
                <span>☆</span>
                <span>☆</span>
                <span>☆</span>
                <span>☆</span>
                <span>☆</span>
            </div>
            <p><%= book.content %></p>
            <a><%= link_to "Read More",book%><i class="fa fa-long-arrow-right"></i></a>
            <ol>
                <li>
                    <a href="#">
                        <i class="fa fa-shopping-cart"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-heart"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-envelope"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-share-alt"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-search"></i>
                    </a>
                </li>
            </ol>
        </div>
    </figcaption>
</figure>